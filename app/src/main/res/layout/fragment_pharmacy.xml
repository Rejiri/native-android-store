<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <com.lopicard.sonial.TextView2
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:text="من فضلك، ادخل الوصفة"
        android:textSize="@dimen/text_10"
        app:fonti="4" />

    <EditText
        android:id="@+id/txtPrescription"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lblTitle"
        android:layout_margin="5dp"
        android:background="#e2e2e2"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textSize="@dimen/text_10" />

    <TextView
        android:id="@+id/txtNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPrescription"
        android:text="يرجى إضافة (الاسم - رقم الهاتف - العنوان) اسفل الوصفة وشكرا."
        android:textSize="@dimen/text_10" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtNote"
        android:layout_margin="5dp"
        android:text="ارسل" />
</RelativeLayout>