<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redlight"
    android:layoutDirection="ltr"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/registerlogo2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/first1" />

    <com.lopicard.sonial.TextView2
        android:id="@+id/registert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerlogo2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="تسجيل"
        android:textColor="@color/orangese"
        android:textSize="@dimen/text_12"
        android:textStyle="bold"
        app:fonti="4" />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registert"
        android:layout_marginTop="19dp">

        <ImageView
            android:id="@+id/note"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:tint="@color/orangese" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/note"
            android:text="الأسم الكامل"
            android:textColor="@color/whitered"
            android:textSize="@dimen/text_12"
            android:textStyle="bold"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/mr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/name"
            android:text="السيد"
            android:textColor="@color/orangese"
            android:textSize="@dimen/text_10"
            app:fonti="4" />

        <ImageView
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toStartOf="@id/mr"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="@color/orangese" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/click"
            android:background="@color/redlight"
            android:hint="الاسم الكامل"
            android:inputType="text"
            android:textSize="@dimen/text_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="8dp"
            android:background="@color/whitered" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/note2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:tint="@color/orangese" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/note2"
            android:text="البريد الالكتروني"
            android:textColor="@color/darkred"
            android:textSize="@dimen/text_12"
            android:textStyle="bold"
            app:fonti="4" />


        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/value"
            android:background="@color/redlight"
            android:hint="someone@example.com"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/text_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/value"
            android:layout_marginTop="8dp"
            android:background="@color/darkred" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/note3"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:tint="@color/orangese" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/mobiln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/note3"
            android:text="رقم هاتف الجوال"
            android:textColor="@color/darkred"
            android:textSize="@dimen/text_12"
            android:textStyle="bold"
            app:fonti="4" />

        <EditText
            android:id="@+id/txtMobile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/mobiln"
            android:background="@color/redlight"
            android:hint="(555) 123 4567"
            android:inputType="phone"
            android:textSize="@dimen/text_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mobiln"
            android:layout_marginTop="8dp"
            android:background="@color/darkred" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r3"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/note4"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:tint="@color/orangese"
            android:visibility="invisible" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/phonen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/note4"
            android:text="رقم الهاتف"
            android:textColor="@color/darkred"
            android:textSize="@dimen/text_12"
            android:textStyle="bold"
            app:fonti="4" />

        <EditText
            android:id="@+id/txtPhone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/phonen"
            android:background="@color/redlight"
            android:hint="(555) 123 4567"
            android:inputType="phone"
            android:textSize="@dimen/text_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/phonen"
            android:layout_marginTop="8dp"
            android:background="@color/darkred" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r4"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/note5"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_brightness_1_black_24dp"
            android:tint="@color/orangese" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/note5"
            android:text="العنوان"
            android:textColor="@color/darkred"
            android:textSize="@dimen/text_12"
            android:textStyle="bold"
            app:fonti="4" />

        <EditText
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginTop="8dp"
            android:background="@color/redlight"
            android:hint="شارع المدينة - بناء رقم 45 - طابق رقم 3"
            android:textSize="@dimen/text_10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtAddress"
            android:layout_marginTop="3dp"
            android:background="@color/darkred" />


    </RelativeLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/darkred"
        android:foreground="?selectableItemBackground"
        android:text="تم"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_10"
        android:textStyle="bold" />


</RelativeLayout>