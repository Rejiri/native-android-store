<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/sertap"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingTop="0dp">

            <android.support.v7.widget.CardView
                android:id="@+id/floatingActionButton7"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:elevation="0dp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/redlight"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:tint="#ffffff" />
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/iconSRC"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/shoppingb2"
                android:tint="#ffffff" />

            <com.lopicard.sonial.TextView2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iconSRC"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/iconSRC"
                android:text="البيانات"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                app:fonti="4" />

            <com.lopicard.sonial.TextView2
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="معلومات العميل"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_12"
                android:textStyle="bold"
                app:fonti="4" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <com.lopicard.sonial.TextView2
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sertap"
        android:layout_marginEnd="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="9dp"
        android:text="العناوين"
        android:textColor="@color/gray"
        android:textSize="11dp"
        android:textStyle="bold"
        app:fonti="4" />

    <android.support.v7.widget.CardView
        android:id="@+id/bar50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        app:cardBackgroundColor="#fcfcfc"
        app:cardCornerRadius="5dp"
        app:contentPaddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/bar30"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundcard">

                <ImageView
                    android:id="@+id/note1"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/circle" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/note1"
                    android:text="الأسم الكامل"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"
                    app:fonti="4" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/value"
                    android:text="السيد"
                    android:textColor="@color/orangese"
                    android:textSize="@dimen/text_10"
                    app:fonti="4" />

                <ImageView
                    android:id="@+id/click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:layout_toStartOf="@id/txtTitle"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="@color/orangese" />

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    android:layout_toStartOf="@+id/click"
                    android:background="@null"
                    android:hint="الاسم الكامل"
                    android:inputType="text"
                    android:layoutDirection="rtl"
                    android:textSize="@dimen/text_12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bar31"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/bar30"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundcard">

                <ImageView
                    android:id="@+id/note3"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/circle" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/lblCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/note3"
                    android:text="المدينة"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"
                    app:fonti="4" />

                <ImageView
                    android:id="@+id/click٢"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="@color/darkgray"
                    android:visibility="gone" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/txtCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:layoutDirection="rtl"
                    android:text="عمان"
                    android:textSize="@dimen/text_12"
                    app:fonti="4" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bar32"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/bar31"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundcard">

                <ImageView
                    android:id="@+id/note4"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/circle"
                    android:visibility="invisible" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/lblPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/note4"
                    android:text="رقم الهاتف"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"
                    app:fonti="4" />

                <EditText
                    android:id="@+id/txtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toStartOf="@+id/lblPhone"
                    android:background="@null"
                    android:hint="(555) 123 4567"
                    android:inputType="phone"
                    android:layoutDirection="rtl"
                    android:textSize="@dimen/text_12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bar33"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/bar32"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundcard">

                <ImageView
                    android:id="@+id/note5"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/circle" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/lblMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/note5"
                    android:text="رقم هاتف الجوال"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"
                    app:fonti="4" />

                <EditText
                    android:id="@+id/txtMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toStartOf="@+id/lblMobile"
                    android:background="@null"
                    android:hint="(555) 123 4567"
                    android:inputType="phone"
                    android:layoutDirection="rtl"
                    android:textSize="@dimen/text_12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bar34"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_below="@+id/bar33"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundcard">

                <ImageView
                    android:id="@+id/note6"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/circle" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toStartOf="@+id/note6"
                    android:text="العنوان"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"
                    app:fonti="4" />

                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/textView5"
                    android:layout_margin="4dp"
                    android:background="@null"
                    android:hint="الصويفية - شارع محمود ابراهيم - عمارة رقم 11 - طابق 3 - شقة 6"
                    android:layoutDirection="rtl"
                    android:padding="5dp"
                    android:textSize="@dimen/text_12" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/bar50"
        android:layout_below="@+id/bar50"
        android:layout_marginTop="7dp"
        android:background="@drawable/roundbutton"
        android:soundEffectsEnabled="true"
        android:text="حفظ"
        android:textColor="#ffffff"
        android:textStyle="bold" />


</RelativeLayout>
