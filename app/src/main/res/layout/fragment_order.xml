<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4f6">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/firstChild"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="15dp"

            android:paddingTop="0dp">

            <android.support.v7.widget.CardView
                android:id="@+id/floatingActionButton7"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:elevation="4dp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/redlight"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:tint="#ffffff" />
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/iconSRC"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/shoppingb2"
                android:tint="#ffffff" />

            <com.lopicard.sonial.TextView2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iconSRC"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/iconSRC"
                android:text="الطلبات"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                app:fonti="4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iconSRC"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="12dp"

                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp">

                <com.lopicard.sonial.TextView2
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="01/01/2000"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_10"
                    android:textStyle="bold"
                    app:fonti="4" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtDate"
                    android:layout_marginTop="0dp"
                    android:text="00:00 AM"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_10"
                    app:fonti="4" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/daten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/txtDate"
                    android:text="التاريخ والوقت"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_10"
                    app:fonti="4" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/ordern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:text="رقم الطلب"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:fonti="4" />

                <com.lopicard.sonial.TextView2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toStartOf="@+id/ordern"
                    android:text="#000000"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:fonti="4" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:text="المبلغ المستحق"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"
                    app:fonti="4" />

                <com.lopicard.sonial.TextView2
                    android:id="@+id/txtItemsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:text="00.00 JD"
                    android:textColor="@color/orangese"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold"
                    app:fonti="4" />

                <com.lopicard.sonial.TextView2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtItemsPrice"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/txtItemsPrice"
                    android:text="غير متضمن اجور التوصيل"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_08"
                    android:textStyle="bold"
                    app:fonti="4" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <com.lopicard.sonial.TextView2
        android:id="@+id/txtInfoBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/firstChild"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="7dp"
        android:text=""
        android:textColor="@color/darkgray"
        android:textSize="@dimen/text_10"
        app:fonti="4" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/detelscard"
        android:layout_below="@+id/txtInfoBar" />

    <Button
        android:id="@+id/bc"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_below="@+id/mainRecycler"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#fcfcfc"
        android:text="إزاله"
        android:textColor="@color/darkred"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bc"
        android:layout_toEndOf="@+id/bc"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="@color/darkred"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/note11"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignEnd="@+id/mainRecycler"
        android:layout_below="@+id/mainRecycler"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle"
        android:visibility="gone" />

    <com.lopicard.sonial.TextView2
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainRecycler"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="11dp"
        android:layout_toStartOf="@+id/note11"
        android:text="لا يوجد ملاحظات"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_10"
        android:visibility="gone"
        app:fonti="4" />

    <RelativeLayout
        android:id="@+id/detelscard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/endChild"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundcard"
        android:padding="10dp">

        <com.lopicard.sonial.TextView2
            android:id="@+id/reprot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="0dp"
            android:text="التقرير"
            android:textColor="@color/redlight"
            android:textSize="@dimen/text_12"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/qtyitems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/reprot"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:text="عدد كامل العناصر"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_10"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reprot"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/line"
            android:text="0"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_10"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/discont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/qtyitems"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:text="الخصم"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_10"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/txtDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCount"
            android:layout_marginStart="11dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/line"
            android:text="00.0 JD"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_10"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/delevery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/discont"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="4dp"
            android:text="إجور التوصيل"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_10"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/txtDeliveryFees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDiscount"
            android:layout_marginStart="11dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/line"
            android:text="03.0 JD"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_10"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="9dp"
            android:text="الجموع النهائي"
            android:textColor="@color/redlight"
            android:textSize="@dimen/text_10"
            android:textStyle="bold"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:id="@+id/txtTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/line"
            android:text="00.00 JD"
            android:textColor="@color/redlight"
            android:textSize="@dimen/text_10"
            android:textStyle="bold"
            app:fonti="4" />

        <com.lopicard.sonial.TextView2
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/checkBox2"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="0dp"
            android:text="طريقة الدفع"
            android:textColor="@color/redlight"
            android:textSize="@dimen/text_12"
            android:textStyle="bold"
            app:fonti="4" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:enabled="false"
            android:text="الدفع باستخدام البطاقة"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_10"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkBox"
            android:layout_alignParentStart="true"
            android:buttonTint="@color/orangese"
            android:checked="true"
            android:text="الدفع عند الاستلام       "
            android:textColor="@color/darkgray"
            android:textSize="@dimen/text_10"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/checkBox"
            android:background="#f2f4f6">

        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/endChild"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:soundEffectsEnabled="true"
        app:cardBackgroundColor="@color/redlight"
        app:cardCornerRadius="0dp">

        <RelativeLayout

            android:id="@+id/laySave"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.lopicard.sonial.TextView2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="إتمام الطلب"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_12"
                android:textStyle="bold"
                app:fonti="4" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>